<Window x:Class="Visualizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:catel="http://catel.codeplex.com"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Visualizer.ViewModels"
        Name="_self"
        Title="Life simulation"
        FocusManager.FocusedElement="{Binding ElementName=AgesList,
                                              Mode=OneTime}"
        SizeToContent="WidthAndHeight"
        d:DataContext="{d:DesignInstance Type=viewModels:DesignMainViewModel,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <catel:StackGrid>
            <catel:StackGrid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </catel:StackGrid.RowDefinitions>
            <Label Margin="0" Padding="0">Ages:</Label>
            <ListBox Name="AgesList"
                     Width="200"
                     MaxHeight="{Binding ElementName=GameField,
                                         Path=ActualHeight,
                                         Mode=OneWay}"
                     IsSynchronizedWithCurrentItem="True"
                     ItemsSource="{Binding Ages,
                                           Mode=OneWay}"
                     SelectedItem="{Binding SelectedAge}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:AgeViewModel}">
                        <Label Content="{Binding Number}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </catel:StackGrid>
        <Grid Width="300"
              Column="2"
              RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <catel:StackGrid DataContext="{Binding Path=SelectedAge, Mode=OneWay}">
                <catel:StackGrid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </catel:StackGrid.ColumnDefinitions>
                <catel:StackGrid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </catel:StackGrid.RowDefinitions>
                <catel:StackGrid.Resources>
                    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                        <Setter Property="IsReadOnly" Value="True" />
                    </Style>
                </catel:StackGrid.Resources>
                <Label>Current statistics</Label>
                <catel:EmptyRow />

                <catel:EmptyCell />
                <Label>Herbivores</Label>
                <Label>Carnivores</Label>

                <Label>Count</Label>
                <TextBox Text="{Binding HerbivoreStats.Count, Mode=OneWay}" />
                <TextBox Text="{Binding CarnivoreStats.Count, Mode=OneWay}" />


                <Label>Birthes</Label>
                <TextBox Text="{Binding HerbivoreStats.Reproductions, Mode=OneWay}" />
                <TextBox Text="{Binding CarnivoreStats.Reproductions, Mode=OneWay}" />

                <Label>Deathes</Label>
                <TextBox Text="{Binding HerbivoreStats.Deathes, Mode=OneWay}" />
                <TextBox Text="{Binding CarnivoreStats.Deathes, Mode=OneWay}" />

                <Label>Mamax ages</Label>
                <TextBox Text="{Binding HerbivoreStats.MaxAges, Mode=OneWay}" />
                <TextBox Text="{Binding CarnivoreStats.MaxAges, Mode=OneWay}" />

                <Label />
                <catel:EmptyRow />

                <Label>Legend</Label>
                <catel:EmptyRow />

                <catel:StackGrid>
                    <catel:StackGrid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </catel:StackGrid.ColumnDefinitions>
                    <Border Width="20"
                            Height="20"
                            Background="LightGray" />
                    <Label>- None</Label>
                </catel:StackGrid>
                <catel:EmptyRow />

                <catel:StackGrid>
                    <catel:StackGrid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </catel:StackGrid.ColumnDefinitions>
                    <Border Width="20"
                            Height="20"
                            Background="Green" />
                    <Label>- Plant</Label>
                </catel:StackGrid>
                <catel:EmptyRow />

                <catel:StackGrid>
                    <catel:StackGrid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </catel:StackGrid.ColumnDefinitions>
                    <Border Width="20"
                            Height="20"
                            Background="Yellow" />
                    <Label>- Herbivore</Label>
                </catel:StackGrid>
                <catel:EmptyRow />

                <catel:StackGrid>
                    <catel:StackGrid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </catel:StackGrid.ColumnDefinitions>
                    <Border Width="20"
                            Height="20"
                            Background="Red" />
                    <Label>- Carnivore</Label>
                </catel:StackGrid>
                <catel:EmptyRow />
            </catel:StackGrid>
        </Grid>

        <catel:StackGrid Grid.Row="0" Grid.Column="1">
            <catel:StackGrid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </catel:StackGrid.ColumnDefinitions>
            <catel:StackGrid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </catel:StackGrid.RowDefinitions>

            <catel:EmptyCell />

            <ItemsControl ItemsSource="{Binding HorizontalCoordinates, Mode=OneTime}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Height="Auto"
                                     Columns="{Binding ElementName=_self.DataContext,
                                                       Path=GridColumns,
                                                       Mode=OneTime}"
                                     Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Label Width="20"
                               Height="20"
                               Margin="0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Content="{Binding}"
                               Padding="0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding VerticalCoordinates, Mode=OneTime}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Height="Auto"
                                     Columns="1"
                                     Rows="{Binding ElementName=_self.DataContext,
                                                    Path=GridRows,
                                                    Mode=OneTime}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Label Width="20"
                               Height="20"
                               Margin="0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Content="{Binding}"
                               Padding="0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl Name="GameField"
                          Focusable="False"
                          ItemsSource="{Binding SelectedAgeCells,
                                                Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Height="Auto"
                                     Columns="{Binding ElementName=_self.DataContext,
                                                       Path=GridColumns,
                                                       Mode=OneTime}"
                                     Rows="{Binding ElementName=_self.DataContext,
                                                    Path=GridRows,
                                                    Mode=OneTime}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:AgentViewModel}">
                        <Border Width="20"
                                Height="20"
                                Margin="0"
                                Background="{Binding BackgroundColor,
                                                     Mode=OneWay}"
                                BorderThickness="1"
                                Padding="0">
                            <Border.InputBindings>
                                <MouseBinding Command="{Binding ShowBrainCommand, Mode=OneTime}" MouseAction="LeftDoubleClick" />
                            </Border.InputBindings>
                            <Label Margin="0,-7,0,0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{Binding Direction,
                                                     Mode=OneWay}"
                                   FontSize="20"
                                   Foreground="{Binding ForegroundColor,
                                                        Mode=OneWay}"
                                   Padding="0"
                                   ToolTip="{Binding Hint,
                                                     Mode=OneWay}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </catel:StackGrid>
    </Grid>
</Window>
